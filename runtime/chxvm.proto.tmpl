syntax = "proto2";

package chainer_compiler.runtime;

message ChxVMValueProto {
    enum Type {
        ARRAY = 1;
        OPTIONAL_ARRAY = 2;
        ARRAY_LIST = 3;
        SEQUENCE = 4;
        OPAQUE = 5;
        INT = 6;
        FLOAT = 7;
        INTS = 8;
        STRING = 9;
        LONGS = 10;
        DOUBLES = 11;
        INT_VALUES = 12;
        SHAPE = 13;
        SCALAR = 14;
        OPTIONAL_SCALAR = 15;
        STRINGS = 16;
    }

    required Type type = 1;
    optional int32 array = 2;
    optional int64 i = 3;
    optional double f = 4;
    repeated int64 ints = 5;
    optional string s = 6;
    repeated int32 array_list = 7;
    optional int32 sequence = 8;
    repeated double doubles = 10;
    optional int32 opaque = 11;
    optional int32 shape = 12;
    optional int32 scalar = 13;
    repeated string strings = 14;
}

message ChxVMTypeProto {
    // ChainerX's. Non-positive indicates the type is not known.
    optional int32 dtype = 1;
    repeated int32 shape = 2;
}

message ChxVMInstructionProto {
    enum Op {
%ChxVM_OPS%
    }

    required Op op = 1;
    repeated ChxVMValueProto inputs = 2;
    repeated int32 outputs = 3;
    optional string debug_info = 4;
    optional int64 id = 5;
    repeated ChxVMTypeProto output_types = 6;
    repeated string output_names = 7;
    optional int64 flops = 8;
}

message ChxVMProgramProto {
    repeated ChxVMInstructionProto instructions = 1;
    repeated string input_names = 2;
    repeated ChxVMTypeProto input_types = 3;
}
